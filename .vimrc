" free the backspace (?)
set backspace=2
" enable mouse in all modes
"set mouse=a
" the include path
set path=.,/usr/include,/usr/include/qt,,
" display ruler
set ruler
" set tabstop to 4 (default=8)
set tabstop=4
" set indent length to 4
set shiftwidth=4
" enable auto-indent
set autoindent

set whichwrap=b,s,h,l,<,>,[,]

set fileencodings=ucs-bom,utf-8,latin1

set encoding=utf-8

syntax on
